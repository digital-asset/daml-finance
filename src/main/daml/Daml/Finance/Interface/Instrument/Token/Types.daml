module Daml.Finance.Interface.Instrument.Token.Types where

import Daml.Finance.Interface.Types.Common.Types (InstrumentKey)

-- | Describes the attributes of a Token Instrument.
data Token = Token
  with
    instrument : InstrumentKey
      -- ^ The instrument's key.
    description : Text
      -- ^ A description of the instrument.
    validAsOf : Time
      -- ^ Timestamp as of which the instrument is valid.
  deriving (Eq, Show)
