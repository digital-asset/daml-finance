module Daml.Finance.Interface.Holding.Holding where

import Daml.Finance.Interface.Types.Common.Types (AccountKey, InstrumentKey)
import Daml.Finance.Interface.Util.Disclosure qualified as Disclosure (I)
import Daml.Finance.Interface.Util.Lockable qualified as Lockable (I)

-- | Type synonym for `Base`.
type I = Holding

-- | Type synonym for `View`.
type V = View

-- | View for `Base`.
data View = View
  with
    instrument : InstrumentKey
      -- ^ Instrument being held.
    account : AccountKey
      -- ^ Key of the account holding the assets.
    amount : Decimal
      -- ^ Size of the holding.
  deriving (Eq, Show)

-- | Base interface for a holding.
interface Holding requires Lockable.I, Disclosure.I where
  viewtype V

  nonconsuming choice GetView : V
    -- ^ Retrieves the interface view.
    with
      viewer : Party
       -- ^ The party retrieving the view.
    controller viewer
    do
      pure $ view this
