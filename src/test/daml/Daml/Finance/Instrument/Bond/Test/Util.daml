    -- Create a callable rate bond factory
    callableBondFactoryCid <- toInterfaceContractId @Callable.F <$> submit issuer do
      createCmd Callable.Factory with
        provider = issuer
        observers = M.empty

    let
      instrument = InstrumentKey with
